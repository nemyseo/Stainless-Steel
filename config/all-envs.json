// configurations in this file are applied before the environment specific file 
// (i.e. development.json)
// thus, these are the default values that can be overridden in the other files

{
  "showStackTraces": true,
  "logLevel":        "debug",
  "logTarget":       "humanizer",
  "locatorSalt":     "CHANGE_ME",
  "PORT":            3000,
  "bodyLimit":       "2mb",
  "useNewRelic":     false,
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 0
  },

  "loginFailureTracker": {
    "expirationTime" : 60,
    "allowedFailures" : 5,
    "sleepTime": 250
  },

  "expectedRefererDomain": "launch.stellar.org",
  "allowedOrigins": [
    "*.stellar.org",
    "stellar.org",
    "localhost",
    "*.localhost",
    "*.dev"
  ]
}